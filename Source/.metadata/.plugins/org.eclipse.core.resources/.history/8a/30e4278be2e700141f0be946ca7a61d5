--<ScriptOptions statementTerminator=";"/>

CREATE TABLE task (
	id INT NOT NULL,
	name VARCHAR(45),
	last_time DATETIME,
	summ_time DATETIME,
	PRIMARY KEY (id)
) ENGINE=InnoDB;

CREATE TABLE user_task (
	id_user INT NOT NULL,
	id_task INT NOT NULL
) ENGINE=InnoDB;

CREATE TABLE user (
	id INT NOT NULL,
	Name VARCHAR(20) NOT NULL,
	PRIMARY KEY (id)
) ENGINE=InnoDB;

CREATE INDEX user_id_FK_idx ON user_task (id_user ASC);

CREATE INDEX task_id_FK_idx ON user_task (id_task ASC);


var c; 
var t; 
var timer_is_on = 0;

function doTimer() {
if (!timer_is_on)
	  {
		  timer_is_on=1;
		  timedCount();
	  }
}

function timedCount() {
	//document.getElementById('txt').value=c;
	innTextInHTML('span_current_time', convertToMinutes(c));
	c = c+1;
	t=setTimeout("timedCount()",1000);
}

function stopTimer() {
	if(timer_is_on)
		{
			timer_is_on=0;
			c = 0;
		}
}

function startTimer(lastTime) {
	c = lastTime;
	doTimer();
}

function convertToMinutes(sec) {
	if (sec > 60) {
		var h = sec/3600 ^ 0 ;
		var m = (sec-h*3600)/60 ^ 0 ;
		var s = sec-h*3600-m*60 ;
		return (h<10?"0"+h:h)+" ч. "+(m<10?"0"+m:m)+" мин. "+(s<10?"0"+s:s)+" сек.";
	} else {
		return sec;
	}
}
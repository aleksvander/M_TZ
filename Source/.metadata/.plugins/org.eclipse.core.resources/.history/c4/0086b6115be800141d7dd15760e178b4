//Удаление задачи - остановка
function deleteCurentTask() {
	
	if (get_cookie('taskid') == null) {
		createCookie('taskid', id_task);
	}
		
	if (loadJSON('rest/tasks/setTaskTime/' + c)){
		stopTimer(); 

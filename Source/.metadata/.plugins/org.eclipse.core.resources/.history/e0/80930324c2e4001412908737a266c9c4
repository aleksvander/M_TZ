package ru.intf.adnovotelnov.dao.interfaces;

import java.util.List;

/**
 * Интерфейс - обновление/создание, удаление и поиск
 * @author Новотельнов А.Д.
 * @version 1.0
 * @param <T>
 */
public interface IDaoEJB<T> {

	/**
	 * Создание новой записи, либо обновление существующей
	 * @param entity Экземпляр сущности
	 */
	void persist(T entity);
	
	/**
	 * Удаление записи
	 * @param entity Экземпляр сущности
	 */
	void remove(T entity);
	
	/**
	 * Поиск всех записей
	 * @return Список найденых сущностей
	 */
	List<T> findAllEntities();
}

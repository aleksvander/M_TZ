package ru.adnovotelnov.ejb;

import javax.ejb.Local;
import javax.ws.rs.CookieParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Local
@Path("tasks")
public interface TaskEJBLocal {
	@GET
	@Path("getTaskForUser")
	@Produces(MediaType.APPLICATION_JSON)
	public boolean getOrCreateTask(@CookieParam("username") Integer userId,
			@CookieParam("currentTask") String currentTask);
	
	@GET
	@Path("setTaskTime/{currentTime}")
	@Produces
	public void setTaskTime(@CookieParam("username") String userName,
			@CookieParam("currentTask") String currentTask, @PathParam("currentTime") Integer timer);
	
	@GET
	@Path("getTimeTaskForUser")
	@Produces(MediaType.APPLICATION_JSON)
	public Integer getTimeForCurrentTaskAndHerUsers(@CookieParam("username") String userName,
			@CookieParam("currentTask") String currentTask);
}

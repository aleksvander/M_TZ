var c; 
var t; 
var timer_is_on = 0;

function doTimer() {
if (!timer_is_on)
	  {
		  timer_is_on=1;
		  timedCount();
	  }
}

function timedCount() {
	//document.getElementById('txt').value=c;
	innTextInHTML('span_current_time', convertToMinutes(c));
	c = c+1;
	t=setTimeout("timedCount()",1000);
}

function stopTimer() {
	if(timer_is_on)
		{
			timer_is_on=0;
			c = 0;
		}
}

function startTimer(lastTime) {
	c = lastTime;
	doTimer();
}

function convertToMinutes(sec) {
	if (sec > 60)
		return Math.floor(sec / 60) + ': ' + sec % 60;
	else
		return sec;
}